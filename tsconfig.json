{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@polyrithm/api": ["libs/api/src/index.ts"],
      "@polyrithm/api-auth": ["libs/api-auth/src/index.ts"],
      "@polyrithm/click-prevent": ["libs/click-prevent/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
